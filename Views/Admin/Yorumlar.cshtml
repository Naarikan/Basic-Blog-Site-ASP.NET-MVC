@using WebApplication1.Models.Classes
@model List<Yorumlar>
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorumlar</h2>


<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Yorum</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var x in Model)
    {
        <tr>


            <td>@x.ID</td>
            <td>@x.KullaniciADi</td>
            <td>@x.Yorum</td>
            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
    </table>


