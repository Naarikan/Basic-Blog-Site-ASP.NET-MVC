@using WebApplication1.Models.Classes
@model PagedList.IPagedList<Blog>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Baslik</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var x in Model)
    {
        <tr>


            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }

</table>

<a href="/Admin/BlogEkle" class="btn btn-success">Blog Ekle</a>

<br />
<br />
@Html.PagedListPager((IPagedList)Model,p=>Url.Action("Index",new {p}))